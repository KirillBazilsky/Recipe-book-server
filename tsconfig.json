{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ESNext",
    "types": ["node", "multer"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "paths": {
      "express": ["types/express"]
    }
  },

  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": []
}
